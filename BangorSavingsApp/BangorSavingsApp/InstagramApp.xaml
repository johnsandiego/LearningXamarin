<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BangorSavingsApp.InstagramApp"
             BackgroundImage="BangorSavingsBlue_photoshopped.png"
             HeightRequest="20">

    <StackLayout
        Spacing="10">
        <Label Text="nyc_photographer"/>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
        <StackLayout 
            Orientation="Horizontal"
            Spacing="10">
            <Label Text="Like" TextColor="#1dabf0"/>
            <Label Text="Comment" TextColor="#1dabf0"/>
            <Label Text="Share" TextColor="#1dabf0"/>
            
        </StackLayout>
        <BoxView Color="#f0f0f0" HeightRequest="1"/>
        <Label Text="700 likes" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />
    </StackLayout>
    
</ContentPage>